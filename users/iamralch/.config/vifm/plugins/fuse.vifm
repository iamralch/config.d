" vim: filetype=vim :

" Mount SSH targets using sshfs
filetype *.ssh
       \ {Mount SSH target}
       \ FUSE_MOUNT2|rclone mount --daemon ssh:%PARAM %DESTINATION_DIR

" Mount S3 buckets using s3fs
filetype *.s3
       \ {Mount S3 target}
       \ FUSE_MOUNT2|rclone mount --daemon s3:%PARAM %DESTINATION_DIR

