{
  "ui": {
    "theme": "$HOME/.config/gemini/themes/catppuccin-mocha.json",
    "hideBanner": true,
    "hideTips": true,
    "useFullWidth": true,
    "showMemoryUsage": true,
    "showLineNumbers": true,
    "enablePromptCompletion": true
  },
  "general": {
    "vimMode": true,
    "preferredEditor": "neovim"
  },
  "privacy": {
    "usageStatisticsEnabled": false
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "tools": {
    "shell": {
      "showColor": true
    }
  },
  "context": {
    "fileName": [
      "AGENTS.md",
      "CLAUDE.md",
      "GEMINI.md"
    ]
  },
  "mcpServers": {
    "vectorcode": {
      "command": "vectorcode-mcp-server"
    },
    "github": {
      "httpUrl": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer $GITHUB_PERSONAL_ACCESS_TOKEN"
      }
    },
    "context7": {
      "httpUrl": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "$CONTEXT7_API_KEY"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/iamralch/Projects"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "firecrawl": {
      "command": "npx",
      "args": [
        "-y",
        "firecrawl-mcp"
      ]
    },
    "figma": {
      "command": "npx",
      "args": [
        "figma-developer-mcp",
        "--stdio"
      ]
    }
  }
}
