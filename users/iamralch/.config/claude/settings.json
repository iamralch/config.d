{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "ask": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)"
    ],
    "allow": [
      "Bash(jq:*)",
      "Bash(fd:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Read(~/Projects/**)",
      "Edit(~/Projects/**)",
      "mcp__plugin_thinking-*",
      "mcp__plugin_playwright-*"
    ],
    "deny": [
      "Read(~/Desktop/**)",
      "Read(~/Documents/**)",
      "Read(~/Downloads/**)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --theme=tokyo-night --style=capsule"
  },
  "extraKnownMarketplaces": {
    "claude-mcp": {
      "source": {
        "source": "github",
        "repo": "claude-contrib/claude-mcp"
      }
    }
  },
  "enabledPlugins": {
    "thinking-mcp@claude-mcp": true,
    "playwright-mcp@claude-mcp": true
  },
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false
}
