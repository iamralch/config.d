{
  "permissions": {
    "allow": ["Edit(~/Projects/**)", "mcp__filesystem", "mcp__playwright"],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Read(~/Desktop/**)",
      "Read(~/Documents/**)",
      "Read(~/Downloads/**)",
      "Read(~/Projects/**/.env*)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --theme=rose-pine"
  },
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false,
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "~/Projects"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    }
  }
}
