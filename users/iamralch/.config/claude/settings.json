{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Edit(~/Projects/**)",
      "mcp__filesystem",
      "mcp__playwright"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Read(~/Desktop/**)",
      "Read(~/Documents/**)",
      "Read(~/Downloads/**)",
      "Read(~/Projects/**/.env*)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --theme=rose-pine"
  },
  "extraKnownMarketplaces": {
    "claude-contrib-mcp": {
      "source": {
        "source": "github",
        "repo": "claude-contrib/claude-mcp"
      }
    }
  },
  "enabledPlugins": {
    "filesystem-mcp@claude-contrib-mcp": true,
    "playwright-mcp@claude-contrib-mcp": true,
    "thinking-mcp@claude-contrib-mcp": true
  },
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false
}
