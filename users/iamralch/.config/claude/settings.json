{
  "permissions": {
    "allow": [
      "Edit(~/Projects/**)",
      "mcp__filesystem",
      "mcp__playwright"
    ],
    "deny": [
      "Read(~/Desktop/**)",
      "Read(~/Documents/**)",
      "Read(~/Downloads/**)",
      "Read(~/Projects/**/.env*)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --theme=rose-pine"
  },
  "alwaysThinkingEnabled": true
}
