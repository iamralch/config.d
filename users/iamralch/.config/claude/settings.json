{
  "permissions": {
    "allow": ["Edit(~/Projects/**)", "Bash(~/Projects/**)"],
    "deny": [
      "Read(~/Desktop/**)",
      "Bash(~/Desktop/**)",
      "Read(~/Documents/**)",
      "Bash(~/Documents/**)",
      "Read(~/Downloads/**)",
      "Bash(~/Downloads/**)",
      "Read(~/Projects/**/.env*)",
      "Bash(~/Projects/**/.env*)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --theme=rose-pine"
  },
  "alwaysThinkingEnabled": true
}
